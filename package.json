{
    "name": "jobtracing",
    "version": "1.0.0",
    "description": "Job Application Tracking System",
    "type": "commonjs",
    "main": "server.js",
    "engines": {
        "node": ">=16.x",
        "npm": ">=8.x"
    },
    "scripts": {
        "start": "node server.js",
        "server": "nodemon server.js",
        "client": "npm start --prefix client",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "test": "jest --verbose",
        "build": "npm install && cd client && npm install && npm run build",
        "install-all": "npm install && cd client && npm install",
        "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "prepare-mongo": "node .github/scripts/prepare_mongo.js",
        "deploy": "npm run build && atlas apps deploy --app-id $REALM_APP_ID --local app_config --include-package-json"
    },
    "jest": {
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ],
        "testTimeout": 30000
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "colors": "^1.4.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.17.3",
        "express-async-handler": "^1.2.0",
        "express-validator": "^7.0.1",
        "jsonwebtoken": "^9.0.0",
        "mongodb": "^5.3.0",
        "mongoose": "^7.0.3",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1"
    },
    "devDependencies": {
        "concurrently": "^8.0.1",
        "eslint": "^8.38.0",
        "jest": "^29.5.0",
        "nodemon": "^2.0.22",
        "supertest": "^6.3.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/username/jobtracing.git"
    },
    "keywords": [
        "job",
        "application",
        "tracking",
        "mongodb",
        "express",
        "react",
        "node"
    ],
    "author": "",
    "license": "MIT"
}